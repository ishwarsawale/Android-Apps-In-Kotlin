<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="try2.calc.age.com.agecalc.MainActivity">

    <EditText
        android:id="@+id/etBirth"
        android:layout_width="211dp"
        android:layout_height="53dp"
        android:layout_marginLeft="84dp"
        android:layout_marginTop="92dp"
        android:ems="10"
        android:hint="Birth Year"
        android:inputType="textPersonName"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvAge"
        android:layout_width="103dp"
        android:layout_height="50dp"
        android:text="your age is"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="108dp"
        app:layout_constraintBottom_toTopOf="@+id/btnGetAge"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/etBirth" />

    <Button
        android:id="@+id/btnGetAge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get Age"
        android:onClick="calculateAge"
        tools:layout_editor_absoluteY="429dp"
        tools:layout_editor_absoluteX="239dp" />
</android.support.constraint.ConstraintLayout>
